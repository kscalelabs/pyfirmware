#!/usr/bin/env bash

set -euo pipefail

# ---------------------------
# Bring up CAN and set torques
# ---------------------------
_set_can_and_max_torques.sh

# ---------------------------
# Run firmware policy loop
# ---------------------------
echo "Running firmware with policy: $policy"
PY="$(command -v python)"
sudo -E chrt 30 "$PY" -m firmware.main "$policy"
