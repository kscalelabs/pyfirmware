#!/usr/bin/env bash

set -euo pipefail

# ---------------------------
# Policy directory handling
# ---------------------------
# ---------------------------
# Bring up CAN and set torques
# ---------------------------
_set_can_and_max_torques.sh

# ---------------------------
# Run firmware policy loop
# ---------------------------
echo "=============================================="
echo "               Running firmware               "
echo "=============================================="
PY="$(command -v python)"
sudo -E chrt 30 "$PY" -m firmware.main
